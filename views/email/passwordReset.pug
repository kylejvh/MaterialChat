extends baseEmail

block content
    p Hi #{username}.
    p Forgot your MaterialChat password? 
    p You can reset your password using the button below. 
    p If you don't want to reset your password, you can safely ignore this email.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset Password
    